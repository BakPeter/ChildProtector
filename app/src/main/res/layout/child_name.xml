<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.fragments.ChildViewFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivChildPic"
        android:layout_width="@dimen/child_name_pic_dimens"
        android:layout_height="@dimen/child_name_pic_dimens"
        android:src="@drawable/ic_splash_screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvChildName"
        android:layout_width="0dp"
        android:paddingEnd="@dimen/app_layout_margins"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/child_name_tv_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivChildPic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivIsChildMonitored"
        tools:text="Default Child Name" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@id/ivIsChildMonitored"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingTop="5dp"
        android:src="@drawable/ic_child_monitored"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>